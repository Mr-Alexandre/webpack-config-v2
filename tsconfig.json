{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@modules/*": [
        "src/scripts/modules/*"
      ],
      "@scenario/*": [
        "src/scripts/scenario/*"
      ],
      "@tools/*": [
        "src/scripts/tools/*"
      ],
      "@variables": [
        "src/scripts/variables.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
